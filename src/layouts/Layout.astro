---
import AsideMenu from '../components/AsideMenu.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="app" class="relative h-screen p-2 gap-2">
		  <header class="[grid-area:header] bg-red-300 min-h-[55px]">
			Navbar
		  </header>
		  <aside class="[grid-area:aside] flex-col flex overflow-y-auto bg-gray-800">
			<AsideMenu />
		  </aside>
		  <main class="[grid-area:main] bg-zinc-900 overflow-y-auto">
			Main content
		  </main>
		  <footer class="[grid-area:player] bg-green-500">
			Player
		  </footer>
		</div>
	  </body>
</html>
<style>
	#app {
    display: grid;
    grid-template-areas:
      "header header header"
      "aside main main"
      "player player player";
    grid-template-columns: 350px 1fr;
    /* grid-template-rows: 100px 1fr 100px; Define la altura explícita para el header y footer */
    grid-template-rows: auto 1fr auto; /* Define la altura explícita para el header y footer */
    height: 100vh; /* Asegúrate de que ocupe toda la altura de la pantalla */
  }
</style>
<style is:global>
	
	html {
		font-family: system-ui, sans-serif;
		background: #000;
	}
	
</style>
